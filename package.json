{
    "name": "clip-bucket",
    "private": true,
    "version": "0.0.0",
    "description": "A modern, privacy-first clipboard manager for developers and power users",
    "author": {
        "name": "Facundo Rivas",
        "email": "facundo.rivas.if@gmail.com",
        "url": "https://github.com/Nestiii"
    },
    "homepage": "https://github.com/Nestiii/clipbucket",
    "repository": {
        "type": "git",
        "url": "https://github.com/Nestiii/clipbucket.git"
    },
    "license": "MIT",
    "keywords": [
        "clipboard",
        "manager",
        "productivity",
        "electron",
        "desktop",
        "privacy",
        "developer-tools"
    ],
    "type": "module",
    "main": "dist-electron/main.js",
    "scripts": {
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "dev": "vite",
        "dev:devtools": "cross-env DEVTOOLS=true vite",
        "build": "rm -rf dist dist-electron && tsc && vite build && electron-builder",
        "build:mac": "rm -rf dist dist-electron && tsc && vite build && electron-builder --mac",
        "build:win": "rm -rf dist dist-electron && tsc && vite build && electron-builder --win",
        "build:linux": "rm -rf dist dist-electron && tsc && vite build && electron-builder --linux",
        "build:all": "rm -rf dist dist-electron && tsc && vite build && electron-builder --mac --win --linux",
        "compile": "tsc && vite build",
        "dist": "electron-builder",
        "dist:mac": "electron-builder --mac",
        "dist:win": "electron-builder --win",
        "dist:linux": "electron-builder --linux",
        "dist:all": "electron-builder --mac --win --linux",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview"
    },
    "build": {
        "appId": "com.Nestiii.clipbucket",
        "productName": "ClipBucket",
        "copyright": "Copyright Â© 2025 Nesti",
        "directories": {
            "output": "dist",
            "buildResources": "build"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*",
            "!node_modules",
            "!src",
            "!electron",
            "!public"
        ],
        "extraResources": [
            {
                "from": "public/icon.png",
                "to": "icon.png"
            }
        ],
        "mac": {
            "category": "public.app-category.productivity",
            "identity": "-",
            "icon": "public/icon.icns",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.plist",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "arm64",
                        "x64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "arm64",
                        "x64"
                    ]
                }
            ]
        },
        "win": {
            "icon": "public/favicon.ico",
            "publisherName": "Nesti",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "linux": {
            "icon": "public/icon.png",
            "category": "Utility",
            "synopsis": "Privacy-first clipboard manager",
            "description": "A modern, privacy-first clipboard manager for developers and power users. Organize your clipboard history with buckets, quick shortcuts, and secure local storage.",
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "rpm",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "dmg": {
            "title": "ClipBucket ${version}",
            "icon": "public/icon.icns",
            "iconSize": 100,
            "background": null,
            "window": {
                "width": 540,
                "height": 380
            },
            "contents": [
                {
                    "x": 410,
                    "y": 230,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 230,
                    "type": "file"
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "public/favicon.ico",
            "uninstallerIcon": "public/favicon.ico",
            "installerHeaderIcon": "public/favicon.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "displayLanguageSelector": false,
            "installerLanguages": [
                "en_US"
            ],
            "language": "1033",
            "runAfterFinish": false
        },
        "appImage": {
            "artifactName": "${productName}-${version}-${arch}.${ext}"
        },
        "deb": {
            "artifactName": "${productName}-${version}-${arch}.${ext}",
            "synopsis": "Privacy-first clipboard manager",
            "category": "utils",
            "priority": "optional"
        },
        "rpm": {
            "artifactName": "${productName}-${version}-${arch}.${ext}",
            "synopsis": "Privacy-first clipboard manager",
            "category": "Applications/Productivity"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json,css,md}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "@phosphor-icons/react": "^2.1.10",
        "@types/lodash": "^4.17.18",
        "@types/uuid": "^10.0.0",
        "cross-env": "^7.0.3",
        "lodash": "^4.17.21",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-error-boundary": "^6.0.0",
        "react-router-dom": "^7.6.2",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.64",
        "@types/react-dom": "^18.2.21",
        "@typescript-eslint/eslint-plugin": "^7.1.1",
        "@typescript-eslint/parser": "^7.1.1",
        "@vitejs/plugin-react": "^4.2.1",
        "electron": "^30.0.1",
        "electron-builder": "^24.13.3",
        "eslint": "^8.57.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "prettier": "^3.5.3",
        "typescript": "^5.2.2",
        "vite": "^5.1.6",
        "vite-plugin-electron": "^0.28.6",
        "vite-plugin-electron-renderer": "^0.14.5"
    }
}
